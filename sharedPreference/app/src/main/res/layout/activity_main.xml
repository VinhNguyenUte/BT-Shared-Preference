<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#79FFE4"
    android:padding="10dp"
    tools:context=".MainActivity">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Nhập thông tin tài khoản"
        android:textColor="#FF0000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Tài khoản -->
    <TextView
        android:id="@+id/label_tk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginTop="10dp"
        android:text="Tài Khoản:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editText_tk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_tk"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:hint="Nhập tài khoản"
        android:inputType="text"
        android:textSize="25dp" />

    <!-- Tên sinh viên -->
    <TextView
        android:id="@+id/label_mk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_tk"
        android:layout_marginTop="16dp"
        android:text="Mật Khẩu:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editText_mk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_mk"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:hint="Nhập mật khẩu"
        android:inputType="textPersonName"
        android:textSize="25dp" />

    <!-- Khoa -->
    <TextView
        android:id="@+id/label_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_mk"
        android:layout_marginTop="16dp"
        android:text="Email:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editText_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_email"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:hint="Nhập email"
        android:inputType="text"
        android:textSize="25dp" />

    <!-- Lớp học phần -->
    <TextView
        android:id="@+id/label_sdt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_email"
        android:layout_marginTop="16dp"
        android:text="Số đện thoại:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editText_sdt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_sdt"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:hint="Nhập số điện thoại"
        android:inputType="text"
        android:textSize="25dp" />

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_sdt"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText_sdt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lưu thông tin" />
    </LinearLayout>

    <Button
        android:id="@+id/btnxacnhan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout"
        android:layout_centerHorizontal="true"
        android:text="Xác nhận" />
</RelativeLayout>
